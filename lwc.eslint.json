{
	"extends": ["@salesforce/eslint-config-lwc/recommended"],
	"overrides": [
		{
			"files": ["*.test.js"],
			"rules": {
				"@lwc/lwc/no-unexpected-wire-adapter-usages": "off",
				"@lwc/lwc/consistent-component-name": "warn",
				"@lwc/no-leading-uppercase-api-name": "off"
			},
			"env": {
				"node": true
			}
		}
	]
}
